summary:
    Check help messages
discover:
    how: shell
    tests:
    - name: /help/main
      test: tmt --help
    - name: /help/test
      test: tmt test --help
    - name: /help/plan
      test: tmt plan --help
    - name: /help/smoke
      test: ./smoke.sh
      path: /tests/shell
prepare:
    how: install
    copr: psss/tmt
    package: tmt
execute:
    how: shell
