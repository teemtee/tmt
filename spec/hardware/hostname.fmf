summary:
    Select specific guest by its hostname
example:
  - |
    # Choose machine with given hostname
    hostname: kvm-01.lab.us-east-2.company.com

  - |
    # Hostname matching a regular expression
    hostname: "~ kvm-01.*"

  - |
    # Hostname not matching a regular expression
    hostname: "!~ kvm-01.*"
link:
