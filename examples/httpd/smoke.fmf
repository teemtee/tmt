summary:
    Basic smoke test for the httpd web server
provision:
    how: virtual
    memory: 4096
prepare:
  - name: packages
    how: install
    package: [httpd, curl]
  - name: service
    how: shell
    script: systemctl start httpd
execute:
    how: shell
    script:
      - echo foo > /var/www/html/index.html
      - curl http://localhost/ | grep foo
