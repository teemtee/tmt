/test:
    test: &do-test |
        if [[ "$(hello)" != "hi" ]]; then
          echo "TMT_PLAN_SOURCE_SCRIPT was not sourced?"
          exit 1
        fi


/plan:
    discover:
        how: fmf
    execute:
        how: tmt
    prepare:
      - name: Sanity checks of initial TMT_PLAN_SOURCE_SCRIPT
        order: 1
        how: shell
        script: |
            # Check that environment variable exists
            if [[ -z "$TMT_PLAN_SOURCE_SCRIPT" ]]; then
              echo "No TMT_PLAN_SOURCE_SCRIPT env-var"
              exit 1
            fi
            # Check that the file exists
            if [[ ! -f "$TMT_PLAN_SOURCE_SCRIPT" ]]; then
              echo "TMT_PLAN_SOURCE_SCRIPT file does not exist"
              exit 1
            fi
            # Check that the file is empty
            if [[ -s "$TMT_PLAN_SOURCE_SCRIPT" ]]; then
              echo "TMT_PLAN_SOURCE_SCRIPT is not empty"
              exit 1
            fi
      - name: Add some content to the TMT_PLAN_SOURCE_SCRIPT
        how: shell
        script: |
            cat > $TMT_PLAN_SOURCE_SCRIPT <<EOF
            function hello { echo "hi"; }
            export -f hello
            EOF
      - name: Check TMT_PLAN_SOURCE_SCRIPT is available in prepare
        how: shell
        order: 100
        script: *do-test
    finish:
      - name: Check TMT_PLAN_SOURCE_SCRIPT is available in finish
        how: shell
        script: *do-test
