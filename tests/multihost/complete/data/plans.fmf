provision:
  - how: container
    name: client-1
    role: client
    image: fedora:36

  - how: container
    name: client-2
    role: client
    image: fedora:36

  - how: container
    name: server
    role: server
    image: fedora:36

execute:
  how: tmt

prepare:
  - how: shell
    script:
      - for envvar in $(compgen -A variable | egrep 'TMT' | sort); do echo "$envvar=${!envvar}"; done
      - "sed -e 's/^/topology-sh: /' $TMT_TOPOLOGY_BASH"
      - "sed -e 's/^/topology-yaml: /' $TMT_TOPOLOGY_YAML"
    where:
      - client

  - how: shell
    script:
      - for envvar in $(compgen -A variable | egrep 'TMT' | sort); do echo "$envvar=${!envvar}"; done
      - "sed -e 's/^/topology-sh: /' $TMT_TOPOLOGY_BASH"
      - "sed -e 's/^/topology-yaml: /' $TMT_TOPOLOGY_YAML"
    where:
      - server

discover:
  - name: server-setup
    how: fmf
    test:
      - /tests/A
    where:
      - server

  - name: tests
    how: fmf
    test:
      - /tests/B
    where:
      - server
      - client

  - name: teardown
    how: fmf
    test:
      - /tests/C
