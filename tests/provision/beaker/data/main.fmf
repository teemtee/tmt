/plan:
    execute:
        how: tmt

    provision:
        how: beaker

/plan/hardware:
    provision+:
        hardware:
            cpu:
                model-name: dummy
                processors: 6
            or:
              - device:
                  driver: ahci
              - device:
                  driver: uhci
              - disk:
                  driver: foo
              - disk:
                  driver: bar

/plan/bootc:
    provision+:
        bootc: True
        bootc_image_url: quay.io/fedora/custom-bootc:latest
        bootc_registry_secret: dummysecret
        image: fedora-42
