path: "/"
framework: shell
require:
    - gcc
    - python3
    - python3-devel
tier: null
adjust+:
  - when: distro == fedora-rawhide
    enabled: false
    because: |
      Python 3.14 wheels for lxml and pydantic are not available yet

/mini:
    summary: Ensure the minimal pip install works
    test: |
        /tmp/venv/bin/pip install .
        /tmp/venv/bin/tmt --help

/full:
    summary: Ensure the full pip install works
    require+:
        - libvirt-devel
        - krb5-devel
        - libpq-devel
        - redhat-rpm-config
    test: |
        /tmp/venv/bin/pip install .[all]
        /tmp/venv/bin/tmt --help
