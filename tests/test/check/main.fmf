summary: Test test checks
tier: 2
duration: 20m

/dmesg:
    test: ./test-dmesg.sh
    tag+:
      - provision-only
      - provision-container
      - provision-local
      - provision-virtual

/journal:
    test: ./test-journal.sh
    tag+:
      - provision-only
      - provision-container
      - provision-local
      - provision-virtual

/avc:
    test: ./test-avc.sh
    tag+:
      - provision-only
      - provision-local
      - provision-virtual

    adjust+:
      - when: provision_how == local
        check:
          - how: avc
            result: xfail

/watchdog:
    test: ./test-watchdog.sh
    tag+:
      - provision-only
      - provision-container
      - provision-virtual

/coredump:
    test: ./test-coredump.sh
    tag+:
      - provision-only
      - provision-container
      - provision-virtual

    adjust+:
      - when: distro == fedora-rawhide
        check:
          - how: avc
            result: xfail
        because: https://bugzilla.redhat.com/show_bug.cgi?id=2418343

/internal:
    test: ./test-internal.sh
    tag+:
      - provision-only
      - provision-virtual
