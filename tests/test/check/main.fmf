summary: Test test checks
tier: 2

/dmesg:
    test: ./test-dmesg.sh
    tag+:
      - provision-only
      - provision-container
      - provision-local
      - provision-virtual

/avc:
    test: ./test-avc.sh
    tag+:
      - provision-only
      - provision-local
      - provision-virtual

    adjust+:
      - when: provision_how == local
        check:
          - how: avc
            result: xfail

/watchdog:
    test: ./test-watchdog.sh
    duration: 15m
    tag+:
      - provision-only
      - provision-container
      - provision-virtual
