provision:
    how: container
environment:
    PLAN_ENV: plan_value

/simple:
    summary: A simple plan
    discover:
      - name: discover-fmf
        how: fmf
      - name: discover-shell
        how: shell
        tests:
          - name: /shell-test
            test: /bin/true
    execute:
        how: tmt

/remote:
    summary: A remote plan
    discover:
        how: fmf
        url: https://github.com/teemtee/tests
        test: /tests/one
    execute:
        how: tmt

/import:
    plan:
        import:
            url: https://github.com/teemtee/tests
            name: /plans/remote
