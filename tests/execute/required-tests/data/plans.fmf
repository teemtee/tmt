provision:
    how: container
execute:
    how: tmt

/good:
    discover:
      - name: first
        how: fmf
        test:
          - /tests/pass
          - /tests/fail
          - /tests/skip
          - /tests/pass
        required-tests:
          - /tests/pass
          - /tests/fail
      - name: second
        how: shell
        tests:
          - name: /tests/shell-pass
            test: /bin/true
          - name: /tests/shell-fail
            test: /bin/false
          - name: /tests/shell-skip
            test: tmt-report-result skipped-test SKIP
        required-tests:
          - /tests/shell-pass
          - /tests/shell-fail

/skipped:
    discover:
      - name: first
        how: fmf
        test:
          - /tests/pass
          - /tests/pass
        required-tests:
          - /tests/pass

      - name: second
        how: fmf
        test:
          - /tests/pass
          - /tests/skip
          - /tests/skip
        required-tests:
          - /tests/pass
          - /tests/skip
