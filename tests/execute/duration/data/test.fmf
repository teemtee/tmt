/short:
    summary: Test with an appropriate duration

    /shell:
        test: sleep 1
    /beakerlib:
        framework: beakerlib
        test: ./short.sh

/long:
    summary: Test exceeding the duration limit
    duration: 5s

    /shell:
        test: sleep 20s
    /beakerlib:
        framework: beakerlib
        test: ./long.sh

/duration-modified:
    summary: Adjust the duration in test metadata
    duration: 2s
    test: sleep 1s
    adjust:
      - when: slow-arch == yes
        duration+: '*2.5'
adjust:
  - when: tty == true
    tty: true
