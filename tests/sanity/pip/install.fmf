path: "/"
framework: shell
require:
    - gcc
    - python3
    - python3-devel
tier: null

environment:
    # Pretend SCM version as tests are not running in git environment
    SETUPTOOLS_SCM_PRETEND_VERSION: 0.0.1.dev0

/mini:
    summary: Ensure the minimal pip install works
    test: |
        /tmp/venv/bin/pip install .
        /tmp/venv/bin/tmt --help

/full:
    summary: Ensure the full pip install works
    require+:
        - libvirt-devel
        - krb5-devel
        - libpq-devel
        - redhat-rpm-config
    test: |
        /tmp/venv/bin/pip install .[all]
        /tmp/venv/bin/tmt --help
