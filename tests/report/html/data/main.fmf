/plan:
    discover:
        how: fmf
    provision:
        how: local
    execute:
        how: tmt

/test:
    /pass:
        summary: Run command 'true'
        test: 'true'
    /fail:
        summary: Run command 'false'
        test: 'false'
    /error:
        summary: Run a non-existing command
        test: a-weird-command
    /timeout:
        summary: Timeout
        duration: 2s
        test: sleep 10
    /xfail:
        summary: Run command 'false' but report pass
        test: 'false'
        result: xfail
    /subresults:
        summary: Fake the subresults data and print them into final report
        test: 'true'
    /skip:
        enabled: false
        summary: Skip test, use tmt-report-result
        test: tmt-report-result skip-this-test SKIP
        adjust:
        - when: use_container == yes
          enabled: true
          because: tmt-report-result does not work with local provisioning

# Special plan to introduce more than one guest, for verification of --display-guest.
# Disabled by default, but enabled in the corresponding test by a magic of context.
/multihost-plan:
    enabled: false

    discover:
        how: fmf
    provision:
        - name: guest-1
          how: container
        - name: guest-2
          how: container
    execute:
        how: tmt

    adjust:
      - when: report_multihost == yes
        enabled: true

/report-file-plan:
    summary: Verify html report with custom file option
    discover:
        how: fmf
    provision:
        how: local
    execute:
        how: tmt
    report:
        - how: html
          file: foo.html
