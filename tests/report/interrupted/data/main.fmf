/plan:
    discover:
        how: fmf
    provision:
        how: virtual
    execute:
        how: tmt
    report:
        how: html

/test:
    /good:
        order: 0
        test: exit 0
    /bad:
        order: 1
        test: exit 1
    /weird:
        order: 2
        test: |
          case "$weird_method" in
            bash)
              rm -f /bin/bash
              ;;
            ssh)
              pstree -p
              echo "this_pid=$$"
              echo "parent_pid=${PPID}"
              echo "sshd-session_pid=$(ps -o ppid= -p ${PPID})"
              # See the pstree above, we want to kill the current sshd-session
              kill $(ps -o ppid= -p ${PPID})
              ;;
          esac
    /missed:
        order: 3
        test: /bin/true
